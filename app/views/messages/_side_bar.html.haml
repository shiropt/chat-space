.side-bar
  .side-bar__top
    .side-bar__top--menu
      = current_user.name
      .name
      .icon
        = link_to new_group_path(current_user), class: "icon" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user),class: "icon" do
          = icon('fas', 'cog')
  
  .side-bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .side-bar__group--title
            = group.name
          .side-bar__message
            = group.show_last_message
  
